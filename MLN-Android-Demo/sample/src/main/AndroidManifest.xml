<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mln.demo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

<!--
    android:networkSecurityConfig="@xml/network_security_config"
    android:theme="@style/AppTheme"
-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:name="com.mln.demo.App">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.34" />
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />
        <meta-data
            android:name="android.notch_support"
            android:value="true" />

       <!-- .performance.EmptyActivity    .activity.LuaViewActivity -->
        <activity android:name="com.mln.demo.activity.LuaViewActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
                  android:theme="@style/AppTheme.StartingWindowTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--config for Glide-->
        <meta-data
            android:name="com.mln.demo.provider.GlideConfiguration"
            android:value="GlideModule"/>
    </application>

</manifest>
