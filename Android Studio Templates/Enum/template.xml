<?xml version="1.0"?>
<template
    format="5"
    revision="3"
    name="Enum"
    description="Creates a Enum for Lua"
    minApi="7"
    minBuildApi="8">

    <category value="MLN" />

    <parameter
        id="ClassName"
        name="Java Class Name"
        type="string"
        constraints="class|nonempty|unique"
        default=""
        help="The name of the java class to create" />

    <parameter
        id="enumType"
        name="enum type"
        type="string"
        constraints="nonempty"
        default="int"
        help="primitive type or String only" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
